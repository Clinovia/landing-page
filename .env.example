# ==============================================
# MedAI Platform - Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ==============================================

# ----------------
# Application
# ----------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="MedAI Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------
# Backend API
# ----------------
# Your backend API base URL (required)
NEXT_PUBLIC_API_URL=http://localhost:8000
# Alternative variable name (if your backend uses this)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ----------------
# Authentication
# ----------------
# JWT secrets (generate strong random strings)
# You can use: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string

# NextAuth.js (if using NextAuth)
NEXTAUTH_SECRET=change-this-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# ----------------
# Database (Optional - if frontend needs direct access)
# ----------------
# Usually backend handles this, uncomment if needed
# DATABASE_URL=postgresql://user:password@localhost:5432/medai_db

# ----------------
# External Services
# ----------------

# Google Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Mixpanel Analytics (optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ----------------
# Email Service (Optional)
# ----------------
# SMTP configuration if frontend sends emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@medai.com

# SendGrid (alternative)
# SENDGRID_API_KEY=

# ----------------
# Cloud Storage (Optional)
# ----------------
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Google Cloud Storage (alternative)
# GCS_PROJECT_ID=
# GCS_BUCKET_NAME=
# GCS_CREDENTIALS=

# Cloudinary (alternative for images)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# ----------------
# Feature Flags
# ----------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_REPORTS=true

# ----------------
# Security
# ----------------
# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Content Security Policy
# CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'

# ----------------
# Development
# ----------------
# Show detailed error messages in development
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable React strict mode
NEXT_PUBLIC_STRICT_MODE=true

# ----------------
# Production Only (uncomment for production)
# ----------------

# Production URLs
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Database connection pooling
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# CDN URL for static assets
# NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# SSL/TLS certificates (if needed)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ----------------
# Testing
# ----------------
# Test database (for integration tests)
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/medai_test_db

# ----------------
# Third-Party Integrations (Medical)
# ----------------
# FHIR Server (if integrating with EHR systems)
# FHIR_SERVER_URL=https://hapi.fhir.org/baseR4
# FHIR_CLIENT_ID=
# FHIR_CLIENT_SECRET=

# HL7 Integration
# HL7_ENDPOINT=

# DICOM Server (for medical imaging)
# DICOM_SERVER_URL=
# DICOM_AE_TITLE=

# ----------------
# Logging & Monitoring
# ----------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# DataDog (optional)
# DATADOG_API_KEY=
# DATADOG_APP_KEY=

# New Relic (optional)
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=

# ----------------
# Performance
# ----------------
# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=75
NEXT_PUBLIC_IMAGE_FORMATS=webp,avif

# Revalidation (ISR)
REVALIDATE_TIME=3600

# ----------------
# Notes & Best Practices
# ----------------
# 1. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 2. Never expose sensitive keys (API keys, secrets) with NEXT_PUBLIC_
# 3. Use different values for development, staging, and production
# 4. Rotate secrets regularly in production (at least every 90 days)
# 5. Use a secrets manager in production (AWS Secrets Manager, HashiCorp Vault, etc.)
# 6. Generate strong random secrets: openssl rand -base64 32
# 7. Keep this file updated when adding new environment variables
# 8. Document each variable's purpose for team members
# 9. Use environment-specific .env files: .env.development, .env.production
# 10. Never commit .env.local, .env.*.local to version control